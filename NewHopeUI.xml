<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="../UI.xsd">
    <Frame name="NHTargetFrame" parent="UIParent" frameStrata="BACKGROUND">
        <Size>
            <AbsDimension x="1200" y="40"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT"/>
        </Anchors>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
            <Color r="0" g="0" b="0" a="0.8"/>
        </Backdrop>
        <Frames>
            <Frame inherits="NHMobs"></Frame>
            <Frame inherits="NHBoss"></Frame>
        </Frames>
    </Frame>
    <Frame name="NHRaidFrame" parent="UIParent" frameStrata="BACKGROUND">
        <Size>
            <AbsDimension x="200" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="LEFT"/>
        </Anchors>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
            <Color r="0" g="0" b="0" a="0.8"/>
        </Backdrop>
        <Frames>
            <Frame inherits="NHRaid"></Frame>
        </Frames>
    </Frame>
    <Frame name="NHBuffFrame" parent="UIParent" frameStrata="BACKGROUND">
        <Size>
            <AbsDimension x="100" y="300"/>
        </Size>
        <Anchors>
            <Anchor point="RIGHT"/>
        </Anchors>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
            <Color r="0" g="0" b="0" a="0.8"/>
        </Backdrop>
        <Frames>
            <Frame inherits="NHBuff"></Frame>
        </Frames>
    </Frame>
    <Frame name="NHBottomFrame" parent="UIParent" frameStrata="BACKGROUND">
        <Size>
            <AbsDimension x="1520" y="200"/>
        </Size>
        <Anchors>
            <Anchor point="BOTTOM"/>
        </Anchors>
        <Frames>
            <Frame inherits="NHChat"></Frame>
            <Frame inherits="NHPlayer"></Frame>
            <Frame inherits="NHActionBar"></Frame>
            <Frame inherits="NHStats"></Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                NewHopeUI_OnLoad();
            </OnLoad>
        </Scripts>
    </Frame>
    <Minimap frameStrata="BACKGROUND">
        <Size>
            <AbsDimension x="200" y="200"/>
        </Size>
        <Anchors>
            <Anchor point="TOPRIGHT"/>
        </Anchors>
    </Minimap>
</Ui>
