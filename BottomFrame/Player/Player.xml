<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="../UI.xsd">
    <Frame name="NHPlayer" virtual="true">
        <Size>
            <AbsDimension x="300" y="40"/>
        </Size>
        <Anchors>
            <Anchor point="TOP"/>
        </Anchors>
        <Layers>
            <Layer>
                <FontString text="Player status" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOP"></Anchor>
                    </Anchors>
                    <FontHeight>
                        <RelValue val="8"/>
                    </FontHeight>
                    <Color r="1" g="1" b="1"/>
                </FontString>
            </Layer>
        </Layers>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
            <Color r="0" g="0" b="0"/>
        </Backdrop>
        <Frames>
            <Frame>
                <Size>
                    <AbsDimension x="50" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="-50" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
                    <Color r="0" g="1" b="0"/>
                </Backdrop>
                <Layers>
                    <Layer>
                        <FontString text="in 0.4" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER"></Anchor>
                            </Anchors>
                            <FontHeight>
                                <RelValue val="8"/>
                            </FontHeight>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Frame>
                <Size>
                    <AbsDimension x="150" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
                    <Color r="1" g="0" b="0"/>
                </Backdrop>
                <Layers>
                    <Layer>
                        <FontString text="8300/12000" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER"></Anchor>
                            </Anchors>
                            <FontHeight>
                                <RelValue val="8"/>
                            </FontHeight>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Frame>
                <Size>
                    <AbsDimension x="150" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT"/>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
                    <Color r="0" g="0" b="1"/>
                </Backdrop>
                <Layers>
                    <Layer>
                        <FontString text="2300/12000" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER"></Anchor>
                            </Anchors>
                            <FontHeight>
                                <RelValue val="8"/>
                            </FontHeight>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Frame>
                <Size>
                    <AbsDimension x="300" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM"/>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
                    <Color r="1" g="1" b="0"/>
                </Backdrop>
                <Layers>
                    <Layer>
                        <FontString text="Schattenblitz" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER"></Anchor>
                            </Anchors>
                            <FontHeight>
                                <RelValue val="8"/>
                            </FontHeight>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                NHPlayer_OnLoad();
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>
