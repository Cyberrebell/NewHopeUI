<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="../UI.xsd">
    <Frame name="NHPlayer" virtual="true">
        <Size>
            <AbsDimension x="300" y="40"/>
        </Size>
        <Anchors>
            <Anchor point="TOP"/>
        </Anchors>
        <Frames>
            <StatusBar name="NHIncomingHeal" defaultValue="1" maxValue="1" minValue="0">
                <Size>
                    <AbsDimension x="100" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="-100" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString name="NHIncomingHealText" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                </Layers>
                <BarTexture file="Interface/TargetingFrame/UI-StatusBar"/>
                <BarColor r="0" g="1" b="0" a="0.7"/>
            </StatusBar>
            <StatusBar name="NHPlayerHealth">
                <Size>
                    <AbsDimension x="150" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString name="NHPlayerHealthText" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                </Layers>
                <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background">
                    <Color r="0" g="0" b="0"/>
                </Backdrop>
                <BarTexture file="Interface/TargetingFrame/UI-StatusBar"/>
                <BarColor r="1" g="0" b="0"/>
            </StatusBar>
            <StatusBar name="NHPlayerPower">
                <Size>
                    <AbsDimension x="150" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT"/>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString name="NHPlayerPowerText" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                </Layers>
                <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background">
                    <Color r="0" g="0" b="0"/>
                </Backdrop>
                <BarTexture file="Interface/TargetingFrame/UI-StatusBar"/>
                <BarColor r="0" g="0" b="1"/>
            </StatusBar>
            <StatusBar name="NHPlayerCastbar">
                <Size>
                    <AbsDimension x="300" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM"/>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString name="NHPlayerCastbarText" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                </Layers>
                <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background">
                    <Color r="0" g="0" b="0"/>
                </Backdrop>
                <Frames>
                    <Frame alpha="0.5">
                        <Size>
                            <AbsDimension x="20" y="20"/>
                        </Size>
                        <Anchors>
                            <Anchor point="LEFT"/>
                        </Anchors>
                        <Layers>
                            <Layer>
                                <Texture name="NHPlayerCastbarIcon"/>
                            </Layer>
                        </Layers>
                    </Frame>
                </Frames>
                <BarTexture file="Interface/PaperDollInfoFrame/UI-Character-Skills-Bar"/>
                <BarColor r="1" g="0.7" b="0"/>
            </StatusBar>
        </Frames>
        <Scripts>
            <OnLoad>
                NHPlayer_OnLoad(self)
            </OnLoad>
            <OnUpdate>
                NHPlayer_OnUpdate(self, elapsed)
            </OnUpdate>
        </Scripts>
    </Frame>
</Ui>