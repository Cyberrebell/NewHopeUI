<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="../UI.xsd">
    <Frame name="NHChat" virtual="true">
        <Size>
            <AbsDimension x="460" y="200"/>
        </Size>
        <Anchors>
            <Anchor point="LEFT"/>
        </Anchors>
        <Layers>
            <Layer>
                <FontString text="Chat" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOP"></Anchor>
                    </Anchors>
                    <FontHeight>
                        <RelValue val="8"/>
                    </FontHeight>
                    <Color r="1" g="1" b="1"/>
                </FontString>
            </Layer>
        </Layers>
        <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background">
            <Color r="1" g="0" b="0" a="0.5"/>
        </Backdrop>
        <Scripts>
            <OnLoad>
                NHChat_OnLoad(self)
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>